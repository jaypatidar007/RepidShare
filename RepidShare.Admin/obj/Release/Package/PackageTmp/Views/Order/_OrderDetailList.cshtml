@model RepidShare.Entities.ViewOdersDetailModel
<div class="row">
    <div class="col-sm-12">
        <div class="table-responsive">
            <table class="table table-striped remove-bottom table-selector table-bordered">
                <thead>
                    <tr>
                        <th>Sr No
                        </th>
                        <th>Document
                        </th>
                        <th>Price
                        </th>
                        <th>VatTax
                        </th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.OdersDetailList != null && Model.OdersDetailList.Count > 0)
                    {
                        for (int i = 0; i < Model.OdersDetailList.Count; i++)
                        {
                        <tr>
                            @Html.HiddenFor(m => Model.OdersDetailList[i].OrderID)
                            <td>@Model.OdersDetailList[i].RowNumber</td>
                            <td>@Model.OdersDetailList[i].DocumentTitle</td>
                            <td>@Model.OdersDetailList[i].Price</td>
                            <td>@Model.OdersDetailList[i].VatTax</td>
                            <td>@Model.OdersDetailList[i].Total</td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">No Record Found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="pagination-strip clearfix">
            <div class="show-page-number">
            </div>
            <div id="pg_pager" class="text-right pagination-wrp">
            </div>
        </div>
        <!--.pagination-strip-->

    </div>
</div>

