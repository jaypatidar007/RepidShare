@model RepidShare.Entities.ViewQuestionModel
@using RepidShare.Entities.Resource;
@if (Model != null && Model.QuestionTypeDetail != null && Model.QuestionTypeDetail.MultiSelect != null && Model.QuestionTypeDetail.MultiSelect.QuestionOptions != null && Model.QuestionTypeDetail.MultiSelect.QuestionOptions.Count > 0)
{
    for (int i = 0; i < Model.QuestionTypeDetail.MultiSelect.QuestionOptions.Count; i++)
    {
        <div class="row">
    <div class="col-sm-3">
        <label>@QuestionResource.Option@(i + 1)</label>
    </div>
    <div  class="col-sm-4">
     <div class="row">
        <div class="col-sm-1">
             <div class="radio-btn TopHalfMargin">
                        @Html.CheckBox("chkMultiSelectOption", new { @disabled = "true" })
                </div>
           
        </div>
        <div class="col-sm-11">
        <div>
        @Html.HiddenFor(m => m.QuestionTypeDetail.MultiSelect.QuestionOptions[i].QuestionID, new { Value = Model.QuestionTypeDetail.MultiSelect.QuestionOptions[i].QuestionID })
             @Html.HiddenFor(m => m.QuestionTypeDetail.MultiSelect.QuestionOptions[i].QuestionOptionsID, new { Value = Model.QuestionTypeDetail.MultiSelect.QuestionOptions[i].QuestionOptionsID })
            @Html.TextBoxFor(model => model.QuestionTypeDetail.MultiSelect.QuestionOptions[i].OptionText, new { @class = "form-control txtMultiSelectOption" })
            @Html.ValidationMessageFor(model => model.QuestionTypeDetail.MultiSelect.QuestionOptions[i].OptionText)
            </div>
         </div>
     </div>
    </div>
     <div class="col-sm-1 TopHalfMargin">
            @if (i == Model.QuestionTypeDetail.MultiSelect.QuestionOptions.Count - 1)
            {
                <a id="lnkAddNewMultiOption" href="javascript:void(0);"><span class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-plus"></span></span></a>
            }
            </div>
</div>
    }

}

<script type="text/javascript">
    $(document).ready(function () {
        $("select, input[type='checkbox'], input[type='radio']").uniform();
        $("#lnkAddNewMultiOption").click(function () {
            AddNewSelection();
        });
    });
</script>